<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="TestSuite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="gorest.co.in.utils.Listener"/>
    </listeners>
    <test name="UserTests">
        <classes>
            <class name="gorest.co.in.users.UserTests">
                <methods>
                    <include name="createRandomUser"/>
                    <include name="verifyRandomlyCreatedUser"/>
                    <include name="updateRandomlyCreatedUser"/>
                    <include name="verifyRandomlyUpdatedUser"/>
                    <include name="deleteRandomlyCreatedUser"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="PostTests">
        <classes>
            <class name="gorest.co.in.posts.PostTests">
                <methods>
                    <include name="createRandomPost"/>
                    <include name="verifyRandomlyCreatedPost"/>
                    <include name="updateRandomlyCreatedPost"/>
                    <include name="verifyRandomlyUpdatedPost"/>
                    <include name="deleteRandomlyCreatedPost"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="CommentTests">
        <classes>
            <class name="gorest.co.in.comments.CommentTests">
                <methods>
                    <include name="createRandomComment"/>
                    <include name="verifyRandomlyCreatedComment"/>
                    <include name="updateRandomlyCreatedComment"/>
                    <include name="verifyRandomlyUpdatedComment"/>
                    <include name="deleteRandomlyCreatedComment"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="AlbumTests">
        <classes>
            <class name="gorest.co.in.albums.AlbumTests">
                <methods>
                    <include name="createRandomAlbum"/>
                    <include name="verifyRandomlyCreatedAlbum"/>
                    <include name="deleteRandomlyCreatedAlbum"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="PhotoTests">
        <classes>
            <class name="gorest.co.in.photos.PhotoTests">
                <methods>
                    <include name="createRandomPhoto"/>
                    <include name="verifyRandomlyCreatedPhoto"/>
                    <include name="deleteRandomlyCreatedPhoto"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>
